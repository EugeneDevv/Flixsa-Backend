<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UOEAdminApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    Menu Style-->
    <style name="navigationDrawerTheme">
        <!--        Color of text and icon when selected-->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <!--        Background color when selected -->
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="Theme.UOEAdminApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UOEAdminApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UOEAdminApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>